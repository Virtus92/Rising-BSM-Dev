  }
  
  .fc-list-event-dot {
    display: none;
  }
  
  .fc-list-event-title {
    font-weight: 500;
  }
  
  /* Tooltip styling */
  .fc-tooltip-header {
    font-weight: bold;
    margin-bottom: 0.25rem;
  }
  
  .fc-tooltip-time {
    font-weight: 500;
    margin-bottom: 0.25rem;
  }
  
  .fc-tooltip-customer,
  .fc-tooltip-location,
  .fc-tooltip-status {
    font-size: 0.85rem;
    margin-bottom: 0.1rem;
  }
  
