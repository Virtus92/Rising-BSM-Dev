<%- include('../../partials/admin-header') %>

<div class="dashboard-wrapper"> 

    <!-- Dashboard Content -->
    <div class="dashboard-content p-3 p-md-4">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item"><a href="/dashboard/termine">Termine</a></li>
          <li class="breadcrumb-item"><a href="/dashboard/termine/<%= termin.id %>">Termin #<%= termin.id %></a></li>
          <li class="breadcrumb-item active" aria-current="page">Bearbeiten</li>
        </ol>
      </nav>

      <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="fas fa-check-circle me-2"></i><%= messages.success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="fas fa-exclamation-circle me-2"></i><%= messages.error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <!-- Terminformular -->
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
          <h2 class="h5 mb-0">Termindaten bearbeiten</h2>
        </div>
        <div class="card-body">
          <form action="/dashboard/termine/<%= termin.id %>/edit" method="POST" class="needs-validation" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="row g-3">
              <!-- Allgemeine Infos -->
              <div class="col-md-8">
                <label for="titel" class="form-label">Titel <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="titel" name="titel" value="<%= termin.titel %>" required>
                <div class="invalid-feedback">
                  Bitte geben Sie einen Titel ein.
                </div>
              </div>
              
              <div class="col-md-4">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status">
                  <option value="geplant" <%= termin.status === 'geplant' ? 'selected' : '' %>>Geplant</option>
                  <option value="bestaetigt" <%= termin.status === 'bestaetigt' ? 'selected' : '' %>>Bestätigt</option>
                  <option value="abgeschlossen" <%= termin.status === 'abgeschlossen' ? 'selected' : '' %>>Abgeschlossen</option>
                  <option value="storniert" <%= termin.status === 'storniert' ? 'selected' : '' %>>Storniert</option>
                </select>
              </div>
              
              <!-- Kunde -->
              <div class="col-md-12">
                <label for="kunde_id" class="form-label">Kunde</label>
                <select class="form-select" id="kunde_id" name="kunde_id">
                  <option value="">-- Kein Kunde zugewiesen --</option>
                  <% if (typeof kunden !== 'undefined' && kunden.length > 0) { %>
                    <% kunden.forEach(function(kunde) { %>
                      <option value="<%= kunde.id %>" <%= termin.kunde_id == kunde.id ? 'selected' : '' %>><%= kunde.name %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>

              <!-- Projekt -->
              <div class="col-md-12">
                <label for="projekt_id" class="form-label">Projekt (optional)</label>
                <select class="form-select" id="projekt_id" name="projekt_id">
                  <option value="">-- Kein Projekt zugewiesen --</option>
                  <% if (typeof projekte !== 'undefined' && projekte.length > 0) { %>
                    <% projekte.forEach(function(projekt) { %>
                      <option value="<%= projekt.id %>" <%= termin.projekt_id == projekt.id ? 'selected' : '' %>><%= projekt.titel %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              
              <!-- Datum und Zeit -->
              <div class="col-md-4">
                <label for="termin_datum" class="form-label">Datum <span class="text-danger">*</span></label>
                <input type="date" class="form-control" id="termin_datum" name="termin_datum" value="<%= new Date(termin.termin_datum).toISOString().split('T')[0] %>" required>
                <div class="invalid-feedback">
                  Bitte wählen Sie ein Datum.
                </div>
              </div>
              
              <div class="col-md-4">
                <label for="termin_zeit" class="form-label">Uhrzeit <span class="text-danger">*</span></label>
                <input type="time" class="form-control" id="termin_zeit" name="termin_zeit" value="<%= termin.timeFormatted %>" required>
                <div class="invalid-feedback">
                  Bitte wählen Sie eine Uhrzeit.
                </div>
              </div>
              
              <div class="col-md-4">
                <label for="dauer" class="form-label">Dauer (Minuten)</label>
                <input type="number" class="form-control" id="dauer" name="dauer" value="<%= termin.dauer %>" min="15" step="15">
              </div>
              
              <!-- Ort -->
              <div class="col-md-12">
                <label for="ort" class="form-label">Ort</label>
                <input type="text" class="form-control" id="ort" name="ort" value="<%= termin.ort === 'Nicht angegeben' ? '' : termin.ort %>">
              </div>
              
              <!-- Beschreibung -->
              <div class="col-md-12">
                <label for="beschreibung" class="form-label">Beschreibung</label>
                <textarea class="form-control" id="beschreibung" name="beschreibung" rows="4"><%= termin.beschreibung === 'Keine Beschreibung vorhanden' ? '' : termin.beschreibung %></textarea>
              </div>
              
              <!-- Optionen -->
              <div class="col-md-12 mt-4">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="benachrichtigung" name="benachrichtigung">
                  <label class="form-check-label" for="benachrichtigung">
                    Kunde über Änderungen benachrichtigen
                  </label>
                </div>
              </div>
              
              <div class="col-12 d-flex justify-content-between mt-4">
                <a href="/dashboard/termine/<%= termin.id %>" class="btn btn-outline-secondary">
                  <i class="fas fa-arrow-left me-2"></i>Zurück
                </a>
                <button type="submit" class="btn btn-success">
                  <i class="fas fa-save me-2"></i>Änderungen speichern
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
</div>

<script>
  // Form Validation
  document.addEventListener('DOMContentLoaded', function() {
    const forms = document.querySelectorAll('.needs-validation');
    
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        
        form.classList.add('was-validated');
      }, false);
    });
  });
</script>

<%- include('../../partials/admin-footer-simple') %>