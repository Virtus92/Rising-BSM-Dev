<%- include('../../partials/admin-header') %>

<div class="dashboard-wrapper">
    <!-- Dashboard Content -->
    <div class="dashboard-content p-3 p-md-4">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item"><a href="/dashboard/projekte">Projekte</a></li>
          <li class="breadcrumb-item active" aria-current="page">Neues Projekt</li>
        </ol>
      </nav>

      <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="fas fa-check-circle me-2"></i><%= messages.success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="fas fa-exclamation-circle me-2"></i><%= messages.error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <!-- Projektformular -->
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
          <h2 class="h5 mb-0">Projektdaten</h2>
        </div>
        <div class="card-body">
          <form action="/dashboard/projekte/neu" method="POST" class="needs-validation" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="row g-3">
              <!-- Allgemeine Infos -->
              <div class="col-md-8">
                <label for="titel" class="form-label">Projekttitel <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="titel" name="titel" value="<%= formData.titel %>" required>
                <div class="invalid-feedback">
                  Bitte geben Sie einen Projekttitel ein.
                </div>
              </div>
              
              <div class="col-md-4">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status">
                  <option value="neu" <%= formData.status === 'neu' ? 'selected' : '' %>>Neu</option>
                  <option value="in_bearbeitung" <%= formData.status === 'in_bearbeitung' ? 'selected' : '' %>>In Bearbeitung</option>
                  <option value="abgeschlossen" <%= formData.status === 'abgeschlossen' ? 'selected' : '' %>>Abgeschlossen</option>
                  <option value="storniert" <%= formData.status === 'storniert' ? 'selected' : '' %>>Storniert</option>
                </select>
              </div>
              
              <!-- Kunde -->
              <div class="col-md-12">
                <label for="kunde_id" class="form-label">Kunde</label>
                <select class="form-select" id="kunde_id" name="kunde_id">
                  <option value="">-- Kein Kunde zugewiesen --</option>
                  <% if (typeof kunden !== 'undefined' && kunden.length > 0) { %>
                    <% kunden.forEach(function(kunde) { %>
                      <option value="<%= kunde.id %>" <%= formData.kunde_id == kunde.id ? 'selected' : '' %>><%= kunde.name %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>
              
              <!-- Datum -->
              <div class="col-md-6">
                <label for="start_datum" class="form-label">Start-Datum <span class="text-danger">*</span></label>
                <input type="date" class="form-control" id="start_datum" name="start_datum" value="<%= formData.start_datum %>" required>
                <div class="invalid-feedback">
                  Bitte wählen Sie ein Start-Datum.
                </div>
              </div>
              
              <div class="col-md-6">
                <label for="end_datum" class="form-label">End-Datum</label>
                <input type="date" class="form-control" id="end_datum" name="end_datum" value="<%= formData.end_datum %>">
                <div class="form-text">Optional. Leer lassen, wenn noch nicht bekannt.</div>
              </div>
              
              <!-- betrag -->
              <div class="col-md-12">
                <label for="betrag" class="form-label">betrag (€)</label>
                <input type="number" class="form-control" id="betrag" name="betrag" value="<%= formData.betrag %>" step="0.01" min="0">
              </div>
              
              <!-- Beschreibung -->
              <div class="col-md-12">
                <label for="beschreibung" class="form-label">Beschreibung</label>
                <textarea class="form-control" id="beschreibung" name="beschreibung" rows="4"><%= formData.beschreibung %></textarea>
              </div>
              
              <div class="col-12 d-flex justify-content-between mt-4">
                <a href="/dashboard/projekte" class="btn btn-outline-secondary">
                  <i class="fas fa-arrow-left me-2"></i>Zurück
                </a>
                <button type="submit" class="btn btn-success">
                  <i class="fas fa-save me-2"></i>Speichern
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <%- include('../../partials/admin-footer') %>
  </div>