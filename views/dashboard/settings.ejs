<%- include('../partials/admin-header') %>

<div class="dashboard-wrapper">

    <!-- Dashboard Content -->
    <div class="dashboard-content p-3 p-md-4">
      <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="fas fa-check-circle me-2"></i><%= messages.success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="fas fa-exclamation-circle me-2"></i><%= messages.error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <div class="row g-4">
        <!-- Allgemeine Einstellungen -->
        <div class="col-lg-6">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
              <h3 class="h5 mb-0">Allgemeine Einstellungen</h3>
            </div>
            <div class="card-body">
              <form action="/dashboard/settings/update" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="category" value="general">
                
                <!-- Sprache -->
                <div class="mb-4">
                  <label for="sprache" class="form-label">Sprache</label>
                  <select class="form-select" id="sprache" name="sprache">
                    <option value="de" <%= settings.sprache === 'de' ? 'selected' : '' %>>Deutsch</option>
                    <option value="en" <%= settings.sprache === 'en' ? 'selected' : '' %>>Englisch</option>
                  </select>
                </div>
                
                <!-- Dunkelmodus -->
                <div class="mb-4">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="dark_mode" name="dark_mode" <%= settings.dark_mode ? 'checked' : '' %>>
                    <label class="form-check-label" for="dark_mode">Dunkelmodus</label>
                  </div>
                  <div class="form-text text-muted">Dunkles Farbschema für die Benutzeroberfläche verwenden.</div>
                </div>
                
                <!-- Zeitzone -->
                <div class="mb-4">
                  <label for="timezone" class="form-label">Zeitzone</label>
                  <select class="form-select" id="timezone" name="timezone">
                    <option value="Europe/Vienna" selected>Europe/Vienna (UTC+01:00)</option>
                    <option value="Europe/Berlin">Europe/Berlin (UTC+01:00)</option>
                    <option value="Europe/Zurich">Europe/Zurich (UTC+01:00)</option>
                  </select>
                </div>
                
                <div class="d-flex justify-content-end">
                  <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Einstellungen speichern
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        
        <!-- Benachrichtigungseinstellungen -->
        <div class="col-lg-6">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
              <h3 class="h5 mb-0">Benachrichtigungen</h3>
            </div>
            <div class="card-body">
              <form action="/dashboard/settings/update" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="category" value="notifications">
                
                <div class="mb-4">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="benachrichtigungen_email" name="benachrichtigungen_email" <%= settings.benachrichtigungen_email ? 'checked' : '' %>>
                    <label class="form-check-label" for="benachrichtigungen_email">E-Mail-Benachrichtigungen</label>
                  </div>
                  <div class="form-text text-muted">Benachrichtigungen per E-Mail erhalten.</div>
                </div>
                
                <div class="mb-4">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="benachrichtigungen_termine" name="benachrichtigungen_termine" checked>
                    <label class="form-check-label" for="benachrichtigungen_termine">Terminerinnerungen</label>
                  </div>
                  <div class="form-text text-muted">Erinnerungen für anstehende Termine erhalten.</div>
                </div>
                
                <div class="mb-4">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="benachrichtigungen_anfragen" name="benachrichtigungen_anfragen" checked>
                    <label class="form-check-label" for="benachrichtigungen_anfragen">Neue Anfragen</label>
                  </div>
                  <div class="form-text text-muted">Bei neuen Kundenanfragen benachrichtigt werden.</div>
                </div>
                
                <div class="mb-4">
                  <label for="benachrichtigungen_intervall" class="form-label">Benachrichtigungsintervall</label>
                  <select class="form-select" id="benachrichtigungen_intervall" name="benachrichtigungen_intervall">
                    <option value="sofort">Sofort</option>
                    <option value="stundlich">Stündlich</option>
                    <option value="taeglich">Täglich (Zusammenfassung)</option>
                  </select>
                </div>
                
                <div class="d-flex justify-content-end">
                  <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Einstellungen speichern
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        
        <!-- Datenexport -->
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
              <h3 class="h5 mb-0">Datenexport</h3>
            </div>
            <div class="card-body">
              <p>Exportieren Sie Ihre Daten für externe Analysen oder Sicherungszwecke.</p>
              
              <div class="row g-3">
                <div class="col-md-4">
                  <div class="card bg-light">
                    <div class="card-body text-center py-4">
                      <i class="fas fa-file-csv fa-2x text-primary mb-3"></i>
                      <h4 class="h6">CSV-Export</h4>
                      <p class="card-text small text-muted mb-3">Daten im CSV-Format für die Verwendung in Excel oder anderen Tabellenkalkulationen.</p>
                      <button class="btn btn-outline-primary btn-sm">CSV exportieren</button>
                    </div>
                  </div>
                </div>
                
                <div class="col-md-4">
                  <div class="card bg-light">
                    <div class="card-body text-center py-4">
                      <i class="fas fa-file-excel fa-2x text-success mb-3"></i>
                      <h4 class="h6">Excel-Export</h4>
                      <p class="card-text small text-muted mb-3">Strukturierte Daten im Excel-Format mit formatierten Tabellen und Dashboards.</p>
                      <button class="btn btn-outline-success btn-sm">Excel exportieren</button>
                    </div>
                  </div>
                </div>
                
                <div class="col-md-4">
                  <div class="card bg-light">
                    <div class="card-body text-center py-4">
                      <i class="fas fa-file-pdf fa-2x text-danger mb-3"></i>
                      <h4 class="h6">PDF-Export</h4>
                      <p class="card-text small text-muted mb-3">Professionelle PDF-Berichte mit Diagrammen und Zusammenfassungen.</p>
                      <button class="btn btn-outline-danger btn-sm">PDF exportieren</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<%- include('../partials/admin-footer-simple') %>