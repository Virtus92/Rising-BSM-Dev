<%- include('../../partials/admin-header') %>

<div class="dashboard-wrapper">

    <!-- Dashboard Content -->
    <div class="dashboard-content p-3 p-md-4">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item"><a href="/dashboard/customers">Kunden</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= kunde.name %></li>
        </ol>
      </nav>

      <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="fas fa-check-circle me-2"></i><%= messages.success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="fas fa-exclamation-circle me-2"></i><%= messages.error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <div class="row g-4">
        <!-- Kundendaten - Full width on mobile, sidebar on desktop -->
        <div class="col-12 col-lg-4 order-1">
          <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
              <h2 class="h5 mb-0">Kundendaten</h2>
              <span class="badge bg-<%= kunde.statusClass %>"><%= kunde.statusLabel %></span>
            </div>
            <div class="card-body">
              <div class="d-flex flex-column gap-3">
                <div>
                  <h3 class="h6 text-muted mb-1">Name</h3>
                  <p class="mb-0 fw-semibold"><%= kunde.name %></p>
                </div>
                
                <div>
                  <h3 class="h6 text-muted mb-1">Firma</h3>
                  <p class="mb-0"><%= kunde.firma %></p>
                </div>
                
                <div>
                  <h3 class="h6 text-muted mb-1">Kundentyp</h3>
                  <p class="mb-0"><%= kunde.kundentyp %></p>
                </div>
                
                <div>
                  <h3 class="h6 text-muted mb-1">E-Mail</h3>
                  <p class="mb-0"><a href="mailto:<%= kunde.email %>" class="text-decoration-none text-break"><%= kunde.email %></a></p>
                </div>
                
                <div>
                  <h3 class="h6 text-muted mb-1">Telefon</h3>
                  <p class="mb-0">
                    <% if (kunde.telefon !== 'Nicht angegeben') { %>
                      <a href="tel:<%= kunde.telefon %>" class="text-decoration-none"><%= kunde.telefon %></a>
                    <% } else { %>
                      <%= kunde.telefon %>
                    <% } %>
                  </p>
                </div>
                
                <div>
                  <h3 class="h6 text-muted mb-1">Adresse</h3>
                  <p class="mb-0">
                    <%= kunde.adresse %><br>
                    <% if (kunde.plz && kunde.ort) { %>
                      <%= kunde.plz %> <%= kunde.ort %>
                    <% } %>
                  </p>
                </div>
                
                <div>
                  <h3 class="h6 text-muted mb-1">Kunde seit</h3>
                  <p class="mb-0"><%= kunde.created_at %></p>
                </div>
                
                <div>
                  <h3 class="h6 text-muted mb-1">Newsletter</h3>
                  <p class="mb-0">
                    <% if (kunde.newsletter) { %>
                      <span class="text-success"><i class="fas fa-check-circle me-1"></i> Abonniert</span>
                    <% } else { %>
                      <span class="text-muted"><i class="fas fa-times-circle me-1"></i> Nicht abonniert</span>
                    <% } %>
                  </p>
                </div>
              </div>
              
              <!-- Action buttons - responsive flexbox layout -->
              <div class="d-flex flex-column flex-sm-row gap-2 mt-4">
                <a href="/dashboard/customers/<%= kunde.id %>/edit" class="btn btn-primary flex-fill">
                  <i class="fas fa-edit me-2"></i>Bearbeiten
                </a>
                <a href="/dashboard/appointments/neu?kunde_id=<%= kunde.id %>" class="btn btn-success flex-fill">
                  <i class="fas fa-calendar-plus me-2"></i>Termin
                </a>
                <a href="/dashboard/projects/neu?kunde_id=<%= kunde.id %>" class="btn btn-info text-white flex-fill">
                  <i class="fas fa-project-diagram me-2"></i>Projekt
                </a>
              </div>
            </div>
          </div>

          <!-- Notizen Card - Moved to top on mobile for easy access -->
          <div class="card border-0 shadow-sm d-lg-none mb-4 order-2">
            <div class="card-header bg-white">
              <h2 class="h5 mb-0">Notizen</h2>
            </div>
            <div class="card-body">
              <form action="/dashboard/customers/<%= kunde.id %>/add-note" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="mb-3">
                  <textarea class="form-control" id="notiz" name="notiz" rows="3" placeholder="Neue Notiz hinzuf端gen..."></textarea>
                </div>
                
                <div class="d-grid">
                  <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Notiz hinzuf端gen
                  </button>
                </div>
              </form>
              
              <hr class="my-3">
              
              <div class="notizen-container">
                <% if (kunde.notizen && kunde.notizen !== 'Keine Notizen vorhanden') { %>
                  <div class="mb-3 bg-light p-3 rounded">
                    <p class="mb-0 small"><%= kunde.notizen %></p>
                  </div>
                <% } else { %>
                  <p class="text-muted text-center mb-0">Keine Notizen vorhanden</p>
                <% } %>
              </div>
            </div>
          </div>
          
          <!-- Notizen Card - Only visible on desktop -->
          <div class="card border-0 shadow-sm d-none d-lg-block">
            <div class="card-header bg-white">
              <h2 class="h5 mb-0">Notizen</h2>
            </div>
            <div class="card-body">
              <form action="/dashboard/customers/<%= kunde.id %>/add-note" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="mb-3">
                  <textarea class="form-control" id="notiz-desktop" name="notiz" rows="4" placeholder="Neue Notiz hinzuf端gen..."></textarea>
                </div>
                
                <div class="d-grid">
                  <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Notiz hinzuf端gen
                  </button>
                </div>
              </form>
              
              <hr class="my-4">
              
              <div class="notizen-container">
                <% if (kunde.notizen && kunde.notizen !== 'Keine Notizen vorhanden') { %>
                  <div class="mb-3 bg-light p-3 rounded">
                    <p class="mb-0"><%= kunde.notizen %></p>
                  </div>
                <% } else { %>
                  <p class="text-muted text-center mb-0">Keine Notizen vorhanden</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Termine und Projekte - Full width on mobile -->
        <div class="col-12 col-lg-8 order-3">
          <!-- Termine -->
          <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
              <h2 class="h5 mb-0">Termine</h2>
              <a href="/dashboard/appointments/neu?kunde_id=<%= kunde.id %>" class="btn btn-sm btn-success">
                <i class="fas fa-plus me-1"></i>Neuer Termin
              </a>
            </div>
            <div class="card-body p-0">
              <% if (termine && termine.length > 0) { %>
                <!-- Desktop view -->
                <div class="d-none d-md-block table-responsive">
                  <table class="table table-hover mb-0">
                    <thead class="table-light">
                      <tr>
                        <th scope="col">Titel</th>
                        <th scope="col">Datum & Zeit</th>
                        <th scope="col">Status</th>
                        <th scope="col">Aktionen</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% termine.forEach(function(termin) { %>
                        <tr>
                          <td>
                            <a href="/dashboard/appointments/<%= appointment.id %>" class="text-decoration-none text-dark">
                              <%= appointment.titel %>
                            </a>
                          </td>
                          <td><%= appointment.datum %></td>
                          <td>
                            <span class="badge bg-<%= appointment.statusClass %>">
                              <%= appointment.statusLabel %>
                            </span>
                          </td>
                          <td>
                            <div class="btn-group btn-group-sm">
                              <a href="/dashboard/appointments/<%= appointment.id %>" class="btn btn-outline-secondary">
                                <i class="fas fa-eye"></i>
                              </a>
                              <a href="/dashboard/appointments/<%= appointment.id %>/edit" class="btn btn-outline-primary">
                                <i class="fas fa-edit"></i>
                              </a>
                            </div>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
                
                <!-- Mobile view -->
                <div class="d-md-none">
                  <div class="list-group list-group-flush">
                    <% termine.forEach(function(termin) { %>
                      <div class="list-group-item p-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                          <h6 class="mb-0">
                            <a href="/dashboard/appointments/<%= appointment.id %>" class="text-decoration-none text-dark">
                              <%= appointment.titel %>
                            </a>
                          </h6>
                          <span class="badge bg-<%= appointment.statusClass %>">
                            <%= appointment.statusLabel %>
                          </span>
                        </div>
                        <div class="small text-muted mb-2"><%= appointment.datum %></div>
                        <div class="d-flex justify-content-end gap-2">
                          <a href="/dashboard/appointments/<%= appointment.id %>" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-eye"></i>
                          </a>
                          <a href="/dashboard/appointments/<%= appointment.id %>/edit" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i>
                          </a>
                        </div>
                      </div>
                    <% }); %>
                  </div>
                </div>
              <% } else { %>
                <div class="p-4 text-center">
                  <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
                  <p class="text-muted mb-3">Keine Termine f端r diesen Kunden vorhanden.</p>
                  <a href="/dashboard/appointments/neu?kunde_id=<%= kunde.id %>" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Termin vereinbaren
                  </a>
                </div>
              <% } %>
            </div>
          </div>
          
          <!-- Projekte -->
          <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
              <h2 class="h5 mb-0">Projekte</h2>
              <a href="/dashboard/projects/neu?kunde_id=<%= kunde.id %>" class="btn btn-sm btn-success">
                <i class="fas fa-plus me-1"></i>Neues Projekt
              </a>
            </div>
            <div class="card-body p-0">
              <% if (projekte && projekte.length > 0) { %>
                <!-- Desktop view -->
                <div class="d-none d-md-block table-responsive">
                  <table class="table table-hover mb-0">
                    <thead class="table-light">
                      <tr>
                        <th scope="col">Projektname</th>
                        <th scope="col">Start-Datum</th>
                        <th scope="col">Status</th>
                        <th scope="col">Aktionen</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% projekte.forEach(function(projekt) { %>
                        <tr>
                          <td>
                            <a href="/dashboard/projects/<%= projekt.id %>" class="text-decoration-none text-dark">
                              <%= projekt.name || projekt.titel || "Projekt #" + projekt.id %>
                            </a>
                          </td>
                          <td><%= projekt.datum %></td>
                          <td>
                            <span class="badge bg-<%= projekt.statusClass %>">
                              <%= projekt.statusLabel %>
                            </span>
                          </td>
                          <td>
                            <div class="btn-group btn-group-sm">
                              <a href="/dashboard/projects/<%= projekt.id %>" class="btn btn-outline-secondary">
                                <i class="fas fa-eye"></i>
                              </a>
                              <a href="/dashboard/projects/<%= projekt.id %>/edit" class="btn btn-outline-primary">
                                <i class="fas fa-edit"></i>
                              </a>
                            </div>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
                
                <!-- Mobile view -->
                <div class="d-md-none">
                  <div class="list-group list-group-flush">
                    <% projekte.forEach(function(projekt) { %>
                      <div class="list-group-item p-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                          <h6 class="mb-0">
                            <a href="/dashboard/projects/<%= projekt.id %>" class="text-decoration-none text-dark">
                              <%=  projekt.titel || " - " %>
                            </a>
                          </h6>
                          <span class="badge bg-<%= projekt.statusClass %>">
                            <%= projekt.statusLabel %>
                          </span>
                        </div>
                        <div class="small text-muted mb-2">Start: <%= projekt.datum %></div>
                        <div class="d-flex justify-content-end gap-2">
                          <a href="/dashboard/projects/<%= projekt.id %>" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-eye"></i>
                          </a>
                          <a href="/dashboard/projects/<%= projekt.id %>/edit" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i>
                          </a>
                        </div>
                      </div>
                    <% }); %>
                  </div>
                </div>
              <% } else { %>
                <div class="p-4 text-center">
                  <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
                  <p class="text-muted mb-3">Keine Projekte f端r diesen Kunden vorhanden.</p>
                  <a href="/dashboard/projects/neu?kunde_id=<%= kunde.id %>" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Projekt erstellen
                  </a>
                </div>
              <% } %>
            </div>
          </div>
          
          <!-- Aktivit辰tshistorie - more compact on mobile -->
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
              <h2 class="h5 mb-0">Aktivit辰tshistorie</h2>
            </div>
            <div class="card-body p-0">
              <ul class="list-group list-group-flush">
                <li class="list-group-item py-3">
                  <div class="d-flex">
                    <div class="flex-shrink-0 me-3">
                      <div class="bg-success bg-opacity-10 p-2 rounded-circle">
                        <i class="fas fa-user text-success"></i>
                      </div>
                    </div>
                    <div>
                      <p class="mb-0">Kunde angelegt</p>
                      <small class="text-muted"><%= kunde.created_at %></small>
                    </div>
                  </div>
                </li>
                <% if (termine && termine.length > 0) { %>
                  <li class="list-group-item py-3">
                    <div class="d-flex">
                      <div class="flex-shrink-0 me-3">
                        <div class="bg-primary bg-opacity-10 p-2 rounded-circle">
                          <i class="fas fa-calendar-check text-primary"></i>
                        </div>
                      </div>
                      <div>
                        <p class="mb-0">Termin <%= termine[0].titel %> erstellt</p>
                        <small class="text-muted"><%= termine[0].datum %></small>
                      </div>
                    </div>
                  </li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<style>
  /* Mobile-specific adjustments */
  @media (max-width: 767.98px) {
    /* Smaller padding for better content use of space */
    .card-body {
      padding: 1rem;
    }
    
    /* Order control for mobile layout */
    .order-1 {
      order: 1;
    }
    .order-2 {
      order: 2;
    }
    .order-3 {
      order: 3;
    }
    
    /* Smaller text for mobile */
    .small {
      font-size: 0.85rem;
    }
    
    /* Better button sizes for touch */
    .btn-sm {
      padding: 0.375rem 0.5rem;
    }
    
    /* Ensure email doesn't overflow */
    .text-break {
      word-break: break-word;
    }
    
    /* More compact list items */
    .list-group-item {
      padding: 0.75rem 1rem;
    }
  }
</style>

<%- include('../../partials/admin-footer-simple') %>