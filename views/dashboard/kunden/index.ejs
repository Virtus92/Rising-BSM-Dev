<%- include('../../partials/admin-header') %>

<div class="dashboard-wrapper">
    <!-- Dashboard Content -->
    <div class="dashboard-content p-3 p-md-4">
      <!-- Filter & Aktionen -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
          <h2 class="h4 mb-1">Kundenverwaltung</h2>
          <p class="text-muted mb-md-0">Alle Kunden von Rising BSM</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
          <div class="input-group">
            <input type="text" class="form-control" id="searchInput" placeholder="Suchen...">
            <button class="btn btn-outline-secondary" type="button" id="searchButton">
              <i class="fas fa-search"></i>
            </button>
          </div>
          <a href="/dashboard/kunden/neu" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Neuer Kunde
          </a>
        </div>
      </div>

      <!-- Kunden Tabelle -->
      <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover datatable mb-0">
              <thead class="table-light">
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Firma</th>
                  <th scope="col">Kontakt</th>
                  <th scope="col">Adresse</th>
                  <th scope="col">Status</th>
                  <th scope="col">Aktionen</th>
                </tr>
              </thead>
              <tbody>
                <% if (typeof customers !== 'undefined' && customers.length > 0) { %>
                  <% customers.forEach(function(customer) { %>
                    <tr>
                      <td>
                        <a href="/dashboard/kunden/<%= customer.id %>" class="text-decoration-none text-dark">
                          <%= customer.name %>
                        </a>
                      </td>
                      <td><%= customer.firma || '–' %></td>
                      <td>
                        <% if (customer.email) { %>
                          <div><a href="mailto:<%= customer.email %>" class="text-decoration-none"><i class="fas fa-envelope me-1"></i><%= customer.email %></a></div>
                        <% } %>
                        <% if (customer.telefon) { %>
                          <div><a href="tel:<%= customer.telefon %>" class="text-decoration-none"><i class="fas fa-phone me-1"></i><%= customer.telefon %></a></div>
                        <% } %>
                      </td>
                      <td>
                        <% if (customer.adresse) { %>
                          <%= customer.adresse %><br>
                          <%= customer.plz %> <%= customer.ort %>
                        <% } else { %>
                          –
                        <% } %>
                      </td>
                      <td>
                        <span class="badge bg-<%= customer.status === 'aktiv' ? 'success' : 'secondary' %>">
                          <%= customer.status === 'aktiv' ? 'Aktiv' : 'Inaktiv' %>
                        </span>
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="/dashboard/kunden/<%= customer.id %>" class="btn btn-outline-secondary">
                            <i class="fas fa-eye"></i>
                          </a>
                          <a href="/dashboard/kunden/<%= customer.id %>/edit" class="btn btn-outline-primary">
                            <i class="fas fa-edit"></i>
                          </a>
                          <a href="/dashboard/termine/neu?kunde=<%= customer.id %>" class="btn btn-outline-success" title="Termin erstellen">
                            <i class="fas fa-calendar-plus"></i>
                          </a>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="6" class="text-center py-4">
                      <p class="text-muted mb-0">Keine Kunden gefunden</p>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<%- include('../../partials/admin-footer-simple') %>