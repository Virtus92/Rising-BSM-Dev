<%- include('../partials/header') %>

<section class="py-5 mt-5 bg-light">
  <div class="container py-5">
    <div class="row justify-content-center mb-5 text-center">
      <div class="col-lg-8">
        <h1 class="display-4 fw-bold mb-3">Rising BSM Blog</h1>
        <p class="lead text-muted">Informative Beiträge zu Facility Management, Umzügen und mehr</p>
      </div>
    </div>
    
    <div class="row">
      <!-- Blog Posts Column -->
      <div class="col-lg-8">
        <% if (!posts || posts.length === 0) { %>
          <div class="card border-0 shadow-sm p-5 text-center mb-4">
            <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
            <h3 class="h4 mb-3">Noch keine Blogbeiträge vorhanden</h3>
            <p class="text-muted">Bald werden hier informative Artikel zu unseren Leistungen und Fachthemen erscheinen.</p>
          </div>
        <% } else { %>
          <!-- Featured Post (largest/newest post) -->
          <% const featuredPost = posts[0]; %>
          <div class="card border-0 shadow-sm overflow-hidden mb-4">
            <div class="row g-0">
              <div class="col-md-6">
                <% if (featuredPost.image) { %>
                  <img src="<%= featuredPost.image %>" class="img-fluid h-100 object-cover" alt="<%= featuredPost.title %>" style="object-fit: cover;">
                <% } else { %>
                  <div class="bg-primary bg-opacity-10 h-100 d-flex align-items-center justify-content-center">
                    <i class="fas fa-blog fa-4x text-primary opacity-50"></i>
                  </div>
                <% } %>
              </div>
              <div class="col-md-6">
                <div class="card-body p-4 p-lg-5">
                  <% if (featuredPost.categories && featuredPost.categories.length > 0) { %>
                    <div class="mb-2">
                      <% featuredPost.categories.slice(0, 2).forEach(function(category) { %>
                        <span class="badge bg-success mb-2 me-2"><%= category %></span>
                      <% }); %>
                    </div>
                  <% } %>
                  <h2 class="card-title h3 fw-bold mb-3">
                    <a href="/blog/<%= featuredPost.slug %>" class="text-decoration-none text-dark stretched-link">
                      <%= featuredPost.title %>
                    </a>
                  </h2>
                  <p class="card-text text-muted mb-3"><%= featuredPost.excerpt || featuredPost.title %></p>
                  <div class="d-flex align-items-center text-muted small">
                    <i class="fas fa-user-circle me-1"></i>
                    <span class="me-3"><%= featuredPost.author %></span>
                    <i class="far fa-calendar me-1"></i>
                    <span><%= featuredPost.date %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Regular Posts Grid -->
          <div class="row g-4">
            <% posts.slice(1).forEach(function(post) { %>
              <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm hover-shadow">
                  <% if (post.image) { %>
                    <div class="ratio ratio-16x9">
                      <img src="<%= post.image %>" class="card-img-top" alt="<%= post.title %>">
                    </div>
                  <% } else { %>
                    <div class="ratio ratio-16x9 bg-light d-flex align-items-center justify-content-center">
                      <i class="fas fa-blog fa-3x text-muted opacity-25"></i>
                    </div>
                  <% } %>
                  <div class="card-body">
                    <% if (post.categories && post.categories.length > 0) { %>
                      <div class="mb-2">
                        <% post.categories.slice(0, 2).forEach(function(category) { %>
                          <span class="badge bg-success mb-2 me-2"><%= category %></span>
                        <% }); %>
                      </div>
                    <% } %>
                    <h3 class="card-title h5 fw-bold mb-3">
                      <a href="/blog/<%= post.slug %>" class="text-decoration-none text-dark stretched-link">
                        <%= post.title %>
                      </a>
                    </h3>
                    <p class="card-text text-muted small"><%= post.excerpt || post.title %></p>
                  </div>
                  <div class="card-footer bg-white border-0 text-muted small">
                    <div class="d-flex justify-content-between align-items-center">
                      <span><i class="fas fa-user-circle me-1"></i> <%= post.author %></span>
                      <span><i class="far fa-calendar me-1"></i> <%= post.date %></span>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
      
      <!-- Sidebar Column -->
      <div class="col-lg-4 mt-5 mt-lg-0">
        <!-- Search Box -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body">
            <h3 class="h5 mb-3">Suche</h3>
            <form action="/blog/search" method="GET">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Suchbegriff eingeben..." name="q" required>
                <button class="btn btn-success" type="submit">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
        
        <!-- Categories -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body">
            <h3 class="h5 mb-3">Kategorien</h3>
            <% if (!categories || categories.length === 0) { %>
              <p class="text-muted small">Keine Kategorien verfügbar.</p>
            <% } else { %>
              <ul class="list-group list-group-flush">
                <% categories.forEach(function(category) { %>
                  <li class="list-group-item border-0 px-0 py-2">
                    <a href="/blog/category/<%= category.slug %>" class="text-decoration-none d-flex justify-content-between align-items-center">
                      <span><i class="fas fa-folder me-2 text-success"></i><%= category.name %></span>
                      <span class="badge bg-light text-dark rounded-pill"><%= category.post_count %></span>
                    </a>
                  </li>
                <% }); %>
              </ul>
            <% } %>
          </div>
        </div>
        
        <!-- Call to Action -->
        <div class="card border-0 shadow-sm bg-success text-white">
          <div class="card-body p-4">
            <h3 class="h5 mb-3">Benötigen Sie unsere Dienstleistungen?</h3>
            <p class="mb-4">Kontaktieren Sie uns für ein unverbindliches Angebot zu unseren Services:</p>
            <div class="d-grid">
              <a href="/#contact" class="btn btn-light">
                <i class="fas fa-paper-plane me-2"></i>Kontaktieren Sie uns
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hover-shadow {
    transition: all 0.3s ease;
  }
  
  .hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
  }
  
  .object-cover {
    object-fit: cover;
  }
</style>

<%- include('../partials/footer') %>