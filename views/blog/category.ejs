<%- include('./header') %>

<section class="py-5 mt-5 bg-light">
  <div class="container py-5">
    <div class="row justify-content-center mb-5 text-center">
      <div class="col-lg-8">
        <h1 class="display-5 fw-bold mb-3"><%= category.name %></h1>
        <% if (category.description) { %>
          <p class="lead text-muted"><%= category.description %></p>
        <% } %>
      </div>
    </div>
    
    <div class="row">
      <!-- Blog Posts Column -->
      <div class="col-lg-8">
        <% if (!posts || posts.length === 0) { %>
          <div class="card border-0 shadow-sm p-5 text-center mb-4">
            <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
            <h3 class="h4 mb-3">Keine Beiträge in dieser Kategorie</h3>
            <p class="text-muted mb-3">Derzeit sind keine Beiträge in dieser Kategorie verfügbar.</p>
            <a href="/blog" class="btn btn-success">Alle Beiträge anzeigen</a>
          </div>
        <% } else { %>
          <!-- Posts Grid -->
          <div class="row g-4">
            <% posts.forEach(function(post) { %>
              <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm hover-shadow">
                  <% if (post.image) { %>
                    <div class="ratio ratio-16x9">
                        <img src="<%= post.image %>" class="card-img-top object-fit-cover" style="height: 200px;" alt="<%= post.title %>">
                    </div>
                  <% } else { %>
                    <div class="ratio ratio-16x9 bg-light d-flex align-items-center justify-content-center">
                      <i class="fas fa-blog fa-3x text-muted opacity-25"></i>
                    </div>
                  <% } %>
                  <div class="card-body">
                    <h3 class="card-title h5 fw-bold mb-3">
                      <a href="/blog/<%= post.slug %>" class="text-decoration-none text-dark stretched-link">
                        <%= post.title %>
                      </a>
                    </h3>
                    <p class="card-text text-muted small mb-3"><%= post.excerpt || post.title %></p>
                    <div class="d-flex justify-content-between align-items-center text-muted small">
                      <span><i class="fas fa-user-circle me-1"></i> <%= post.author %></span>
                      <span><i class="far fa-calendar me-1"></i> <%= post.date %></span>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
      
      <!-- Sidebar Column -->
      <div class="col-lg-4 mt-5 mt-lg-0">
        <!-- Search Box -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body">
            <h3 class="h5 mb-3">Suche</h3>
            <form action="/blog/search" method="GET">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Suchbegriff eingeben..." name="q" required>
                <button class="btn btn-success" type="submit">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
        
        <!-- Category Info -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body">
            <h3 class="h5 mb-3">Über diese Kategorie</h3>
            <p class="text-muted mb-0"><%= category.description || `Alle Beiträge zum Thema "${category.name}"` %></p>
          </div>
        </div>
        
        <!-- Call to Action -->
        <div class="card border-0 shadow-sm bg-success text-white">
          <div class="card-body p-4">
            <h3 class="h5 mb-3">Benötigen Sie unsere Dienstleistungen?</h3>
            <p class="mb-4">Kontaktieren Sie uns für ein unverbindliches Angebot zu unseren Services:</p>
            <div class="d-grid">
              <a href="/#contact" class="btn btn-light">
                <i class="fas fa-paper-plane me-2"></i>Kontaktieren Sie uns
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hover-shadow {
    transition: all 0.3s ease;
  }
  
  .hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
  }
</style>

<%- include('./footer') %>