# Server Configuration
PORT=5000
HOST=localhost
NODE_ENV=development
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rising_bsm?schema=public
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=rising_bsm
DB_SSL=false

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Authentication Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_TOKEN_ROTATION=true
VERIFY_JWT_USER_IN_DB=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_STANDARDIZE=true

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Configuration
CACHE_ENABLED=true
DEFAULT_CACHE_TTL=300
CACHE_CHECK_PERIOD=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880