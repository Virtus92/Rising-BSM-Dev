<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Rising BSM' %></title>
    <style>
        /* Basic styling */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .status-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        .status-card {
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .status-ok {
            background-color: #e8f5e9;
            border-left: 5px solid #4caf50;
        }
        .status-error {
            background-color: #ffebee;
            border-left: 5px solid #f44336;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f5f5f5;
        }
        tr:hover {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Rising BSM - Business Service Management</h1>
        
        <% if (typeof systemStatus !== 'undefined') { %>
        <h2>Systemstatus</h2>
        <div class="status-grid">
            <div class="status-card <%= systemStatus.databaseStatus === 'OK' ? 'status-ok' : 'status-error' %>">
                <h3>Datenbank</h3>
                <p>Status: <%= systemStatus.databaseStatus %></p>
            </div>
            <div class="status-card <%= systemStatus.applicationStatus === 'OK' ? 'status-ok' : 'status-error' %>">
                <h3>Anwendung</h3>
                <p>Status: <%= systemStatus.applicationStatus %></p>
            </div>
        </div>
        
        <div style="margin-top: 20px;">
            <p>Letztes Update: <%= systemStatus.lastUpdate %></p>
        </div>
        <% } %>
        
        <% if (typeof apiEndpoints !== 'undefined' && Array.isArray(apiEndpoints) && apiEndpoints.length > 0) { %>
        <h2>API Endpunkte</h2>
        <table>
            <thead>
                <tr>
                    <th>Methode</th>
                    <th>Pfad</th>
                    <th>Beschreibung</th>
                </tr>
            </thead>
            <tbody>
                <% apiEndpoints.forEach(function(endpoint) { %>
                <tr>
                    <td><%= endpoint.method %></td>
                    <td><%= endpoint.path %></td>
                    <td><%= endpoint.description || 'Keine Beschreibung verfügbar' %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <h2>API Dokumentation</h2>
        <p>API-Endpunkte sind momentan nicht verfügbar.</p>
        <% } %>
        
        <footer style="margin-top: 40px; border-top: 1px solid #ddd; padding-top: 20px;">
            <p>&copy; <%= new Date().getFullYear() %> Rising BSM. Alle Rechte vorbehalten.</p>
        </footer>
    </div>
</body>
</html>