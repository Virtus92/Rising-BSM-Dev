# Test Environment Configuration

# Node environment
NODE_ENV=test

# Server settings
BACKEND_PORT=5001
BACKEND_HOST=localhost
API_PREFIX=/API/v1

# Security settings 
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5001

# Authentication settings
JWT_SECRET=test-jwt-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=test-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_TOKEN_ROTATION=true
VERIFY_JWT_USER_IN_DB=true

# Rate limiting - disabled for tests
RATE_LIMIT_MAX=1000
RATE_LIMIT_STANDARDIZE=true

# Database settings - override in test setup
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=rising_bsm_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rising_bsm_test

# Pagination defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=50

# Cache settings - disabled for tests
CACHE_ENABLED=false

# Logging - minimal for tests
LOG_LEVEL=error
LOG_FORMAT=pretty

# Swagger
SWAGGER_ENABLED=false
