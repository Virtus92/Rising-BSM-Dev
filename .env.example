# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/rising_bsm?schema=public
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
DB_DATABASE=rising_bsm
DB_SSL=false

# Server Configuration
PORT=5000
HOST=localhost
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
API_PREFIX=/api/v1
API_URL=http://localhost:5000

# Authentication Configuration
AUTH_MODE=jwt
VERIFY_JWT_USER_IN_DB=true

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Caching Configuration
CACHE_ENABLED=true
DEFAULT_CACHE_TTL=300
CACHE_CHECK_PERIOD=60000

# Development Error Handling
SHOW_STACK_TRACES=true

# JWT Configuration
JWT_SECRET=your-super-secret-development-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_TOKEN_ROTATION=true

# Session Configuration
SESSION_SECRET=rising-bsm-development-secret
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000

# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_HOST=localhost:5000

# Backend Configuration
BACKEND_PORT=5000
BACKEND_HOST=0.0.0.0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
